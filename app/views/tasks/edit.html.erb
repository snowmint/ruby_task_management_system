<div class="container">
  <br/>
  <h1><%= raw(t('task_relate.edit_task')) %></h1>

  <div style="color:red">
    <%= flash[:error]%>
  </div>
  <%= render "form", task: @task, locals: { url: task_path(@task), method: :patch, action:"edit" } %>
