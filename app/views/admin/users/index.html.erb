<div class="container">
  <% provide(:title, 'All users') %>
  <br />
  <h1><%= t('user_relate.user_list') %></h1>
  <%= link_to I18n.t('user_relate.add_user'), new_admin_user_path %>
  <div style="color:green">
    <%= flash[:success]%>
  </div>
  <div style="color:red">
    <%= flash[:error]%>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
        <th> <%= User.human_attribute_name("users.id") %> </th>
          <th> <%= User.human_attribute_name("users.username") %> </th>
          <th> <%= User.human_attribute_name("users.email") %> </th>
          <th> <%= User.human_attribute_name("users.create_time") %> </th>
          <th> <%= I18n.t("user_relate.num_of_tasks") %> </th>
          <th> <%= User.human_attribute_name("users.handle") %> </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td><%= user.tasks.count %></td>
          <td>
            <%= link_to I18n.t('task_relate.task_list'), admin_user_tasks_path(user) %>
            <%= link_to I18n.t('user_relate.edit_user'), edit_admin_user_path(user) %>
            <%= link_to I18n.t('user_relate.delete_user'), admin_user_path(user), method: :delete, data: { confirm: "Comfirm to delete acoount: " + user.username } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div sytle="margin: auto;">
      <%= paginate @users %>
    </div>
  </div>
</div>